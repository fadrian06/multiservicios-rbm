---
export interface Props {
  link: string;
  image: string;
  name: string;
  price: string;
}

const { link, image, name, price } = Astro.props;
---

<article class="col">
  <div class="product-item hover-effect-slide">
    <div class="image-holder">
      <a href={link}>
        <img src={image} alt={name} class="product-image img-fluid" />
      </a>
      <a href="#" class="btn btn-primary w-100 mt-3">Add to cart</a>
    </div>
    <div
      class="product-content d-flex justify-content-between align-items-center gap-5 mt-3"
    >
      <h3 class="fs-5">
        <a href={link}>{name}</a>
      </h3>
      {price}
    </div>
  </div>
</article>
