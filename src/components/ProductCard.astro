---
export interface Props {
  link: string;
  image: string;
  name: string;
  price: string;
}

const { link, image, name, price } = Astro.props;
---

<article class="col hover-effect-slide">
  <div class="overflow-hidden">
    <a href={link}>
      <img src={image} alt={name} class="img-fluid object-fit-cover" />
    </a>
    <a href="#" class="btn btn-primary w-100 mt-3">Add to cart</a>
  </div>
  <div class="d-flex justify-content-between align-items-center gap-5 mt-3">
    <h3 class="fs-5">
      <a href={link}>{name}</a>
    </h3>
    {price}
  </div>
</article>

<style>
  .hover-effect-slide img {
    transform: translateY(1rem);
    transition: transform 300ms;
    aspect-ratio: 1 / 1;
  }

  .hover-effect-slide .btn {
    transform: translateY(100%);
    transition: transform 300ms;
  }

  .hover-effect-slide:hover img,
  .hover-effect-slide:hover .btn {
    transform: translateY(0);
  }
</style>
